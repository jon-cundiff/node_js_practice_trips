<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
    <title>Trips</title>
</head>
<body>
    {{> header}}
    <div id="container">
        {{#username}}
            <h2>Trips</h2> 

            {{#isNotEmpty}}
            <div class="sort">
                <h4>Sort:</h4>
                <a href="/">None</a>
                <a href="/?sort=asc">Oldest First</a>
                <a href="/?sort=des">Most Recent First</a>
            </div>
                {{#trips}}
                    {{>trip}}
                {{/trips}}
            {{/isNotEmpty}}
            {{^isNotEmpty}}
                <div class="container"><h2>No trips found!</h2></div>
            {{/isNotEmpty}}
        {{/username}}
        {{^username}}
            <h2>Please log in or sign up to view and add trips</h2>
        {{/username}}
    </div>

    {{#username}}
        {{> chat}}
    {{/username}}
</body>
</html>